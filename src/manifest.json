{
  "manifest_version": 3,
  "name": "AWS Console Link Sharer",
  "version": "1.0.0",
  "description": "Clean AWS Console URLs and generate deep links for cross-account access",
  "author": "ryancormack",
  "homepage_url": "https://github.com/ryancormack/aws-console-share-extension",
  
  "permissions": [
    "activeTab",
    "storage",
    "scripting"
  ],
  
  "host_permissions": [
    "*://*.console.aws.amazon.com/*"
  ],
  
  "background": {
    "service_worker": "background.js",
    "type": "module"
  },
  
  "content_scripts": [
    {
      "matches": ["*://*.console.aws.amazon.com/*"],
      "js": ["content/content.js"],
      "run_at": "document_idle"
    }
  ],
  
  "action": {
    "default_popup": "popup/popup.html",
    "default_title": "AWS Console Link Sharer",
    "default_icon": {
      "16": "icons/icon16.png",
      "48": "icons/icon48.png",
      "128": "icons/icon128.png"
    }
  },
  
  "options_page": "options/options.html",
  
  "icons": {
    "16": "icons/icon16.png",
    "48": "icons/icon48.png",
    "128": "icons/icon128.png"
  }
}